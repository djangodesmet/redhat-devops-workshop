{
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit",
        }
    },
    "python.testing.pytestEnabled": true,
    "editor.rulers": [
        88
    ],
    "files.exclude": {
        ".mypy_cache/": true,
        ".ruff_cache/": true,
        "__pycache__/": true,
        ".pytest_cache/": true,
        "**.egg-info": true,
        "**/__pycache__": true,
    }
}